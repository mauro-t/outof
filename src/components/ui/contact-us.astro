---
import BigArrow from "../../assets/big-arrow.svg";
---

<a
  href="/contacts"
  class="group flex items-center overflow-hidden px-3 py-10 md:px-5 md:py-17"
>
  <div
    class="flex grow -translate-x-[calc(15vw+40px)] items-center gap-10 transition-transform duration-700 group-hover:translate-x-0"
  >
    <BigArrow
      class="w-[15vw] opacity-0 transition-opacity duration-700 group-hover:opacity-100"
    />
    <div class="font-serif text-title-xl">Contattaci</div>
  </div>
  <BigArrow
    class="w-[15vw] transition-[translate,opacity] duration-700 group-hover:translate-x-full group-hover:opacity-0"
  />
</a>
